<h3>User info</h3>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
<table class="table">
  <tr><td>
  	<h5 class="profile-name">name</h5>
  </td><td>
  	<%= user.name %>
  </td></tr>
  <tr><td>
		<h5 class="profile-introduction">Introduction </h5>
	</td><td>
	  <%= user.introduction %>
	</td></tr>
	<tr><td>
		<h5>Follows</h5>
	</td><td>
		<a href="<%= following_user_path(user) %>">
    <strong id="following" class="stat">
      <%= user.followings.count %>
    </strong></a>
	</td></tr>
	<tr><td>
		<h5>followers</h5>
	</td><td>
		<a href="<%= followers_user_path(user) %>">
    <strong id="followers" class="stat">
      <%= user.followers.count %>
    </strong></a>
	</td></tr>
		<% if user == current_user %>
		<tr><td>
			<%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %><i class="fas fa-wrench"></i></td></tr>
			<% end %>
		<% else %>
		<% if current_user.following? user %>
		  <tr><td>
		  	<%= form_for(current_user.following_relationships.find_by(following_id: user.id), html: { method: :delete }) do |f| %>
									  <%= f.submit "フォローを外す" ,class:"btn btn-outline-secondary btn-block"%>
									<% end %>
		  </td></tr>
		  <% else %>
		  <tr><td>
		  	<%= form_for(current_user.following_relationships.build(following_id: user.id)) do |f| %>
			  <div><%= f.hidden_field :following_id %></div>
			  <%= f.submit "フォローする",class:"btn btn-outline-primary btn-block" %>
			<% end %>
		  </td></tr>
		  <% end %>
		<% end %>
</table>






